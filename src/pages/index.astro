---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero2.astro';
import Brands from '~/components/widgets/Brands.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Announcement from '~/components/widgets/Announcement.astro';

const metadata = {
  title: 'Cosmovision — Internet y Cable, todo conectado',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Explora planes',
        href: '/pricing',
        icon: '',
      },
    ]}
    image={{ src: '~/assets/images/heroR.png', alt: 'Cosmovision Hero Image' }}
  >
    <Fragment slot="title">
      Internet y Cable a la
      <span class="text-accent "> Velocidad</span> de la luz
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Descubre la velocidad supersónica en cada conexión con nuestros servicios de 
        internet y cable. Navega, juega y comunícate sin límites.
        </span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Cosmovision: Production-ready.</span>
      Vive una experiencia digital sin precedentes, perfecta para toda la familia y amigos que 
      quieren más de cada momento en línea.
    </Fragment>
  </Hero>

  <!-- Brands Widget ******************* -->

  <Brands
    title="Nuestros Socios Cosmicos"
    subtitle="Nuestro servicio esta impulsado y cuenta con la confianza de estos lideres estelares."
    images={[
      {
      src: 'src/assets/images/ispLogo.png',
      alt: 'ISP Logo',
      },
      {
      src: 'src/assets/images/feLogo.png',
      alt: 'Fe y Alegria Logo',
      },
      {
        src: 'src/assets/images/nablaLogo.png',
        alt: 'Nabla Logo'
      },
      {
        src: 'src/assets/images/cooitzaLogob.png',
        alt: 'Cooitza Logo'
      },
      {
        src: 'src/assets/images/sisteguaLogo.png',
        alt: 'Sistegua Logo'
      },
      {
        src: 'src/assets/images/aseinfoLogo.png',
        alt: 'Aseinfo Logo'
      },
      {
      src: 'src/assets/images/hilcosaLogo.jpeg',
      alt: 'Hilcosa Logo',
      },
      {
      src: 'src/assets/images/radioLogo.jpeg',
      alt: 'Radio Logo',
      },
      {
      src: 'src/assets/images/lesuisseLogo.png',
      alt: 'LeSuisse Logo',
      },
      
    ]}
  >
  </Brands>  

  <!-- Features Widget *************** -->

  <Features
    id="servicios"
    tagline="Nuestros Servicios"
    title="Conexiones que trascienden"
    subtitle="Nuestra misión es proporcionar una experiencia sin igual, donde cada servicio es una puesta a mundos de posibilidades."
    items={[
      {
        title: 'Internet',
        description:
          'Internet de alta velocidad, confiable y asequible para satisfacer las demandas del mundo digital actual.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Televisión',
        description:
          'Con más de 90 canales disponibles, nuestra oferta de televisión por cable es como un telescopio que te acerca a galaxias de contenido diverso.',
        icon: 'tabler:components',
      },
      {
        title: 'Paquetes combinados',
        description:
          'Nuestros paquetes de Internet + Cable se alinean con las necesidades...',
        icon: 'tabler:list-check',
      },
      {
        title: 'Transporte de datos',
        description:
          'Facilitamos la comunicación entre empresas con soluciones de transporte de datos de alta velocidad y confiabilidad.',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <!-- Call to action Cable ********** -->

  <Announcement image="src/assets/images/ctaTV.png"/>

  <!-- Features Widget *************** -->

  <Features
    id="servicios"
    tagline="Nuestros Servicios"
    title="Conexiones que trascienden"
    subtitle="Nuestra misión es proporcionar una experiencia sin igual, donde cada servicio es una puesta a mundos de posibilidades."
    items={[
      {
        title: 'Internet',
        description:
          'Internet de alta velocidad, confiable y asequible para satisfacer las demandas del mundo digital actual.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Televisión',
        description:
          'Con más de 90 canales disponibles, nuestra oferta de televisión por cable es como un telescopio que te acerca a galaxias de contenido diverso.',
        icon: 'tabler:components',
      },
      {
        title: 'Paquetes combinados',
        description:
          'Nuestros paquetes de Internet + Cable se alinean con las necesidades...',
        icon: 'tabler:list-check',
      },
      {
        title: 'Transporte de datos',
        description:
          'Facilitamos la comunicación entre empresas con soluciones de transporte de datos de alta velocidad y confiabilidad.',
        icon: 'tabler:rocket',
      },
    ]}
  />
  

  <!-- Content Widget **************** -->

  <Content
    isReversed
    title="Descubre por qué somos la mejor opción"
    items={[
      {
        title: 'Conectividad de alta velocidad',
        description:
          'Nuestra red de fibra optica y microondas garantiza velocidades de internet excepcionales para una experiencia de navegación sin igual.',
      },
      {
        title: 'Fiabilidad ininterrumpida',
        description:
          'Reespaldamos nuestra infraestructura con sistemas de redundancia y monitoreo constante para mantener una conexión confiable en todo momento.',
      },
      {
        title: 'Soporte técnico especializado',
        description:
          'Nuestro equipo de expertos está disponible para brindar asistencia inmediata en caso de cualquier problema.',
      },
    ]}
    image={{
      src: '~/assets/images/bestO.png',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Conéctate con el Futuro</h3>
       Con una conexión inspirada en la velocidad y la vastedad del cosmos
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps2 Widget ****************** -->

  
  <Steps2
      title="Contáctanos"
      callToAction={{
        text: 'Escribenos',
        href: 'https://wa.me/50249177756?text=Quiero%20tener%20más%20información%20sobre%20sus%20servicios',
      }}
      items={[
        {
          title: 'Llamanos',
          description: '2375-2311',
          icon: 'tabler:headset',
        },
        {
          title: 'Escribenos',
          description: '4917-7756',
          icon: 'tabler:brand-whatsapp',
        },
        {
          title: 'Siguenos',
          description: 'Cosmovision',
          icon: 'tabler:brand-facebook',
        },
      ]}
    />

  
  

</Layout>
