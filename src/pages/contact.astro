---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <ContactUs
    title="Deja tu mensaje hoy"
    subtitle="Responderemos a tu solicitud lo más pronto posible."
    button="Enviar"
    inputs={[
      {
        type: 'text',
        name: 'nombre',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'hidden',
        name: 'nombre',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario, usted reconoce la recopilación de su información personal.'
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Otras formas de contactarnos"
    items={[
      {
        title: 'Villa Nueva',
        description: 'Boulevard principal Terrezas, Peronia 502-Villa Nueva, Guatemala',
        icon: 'tabler:map-pin',
      },
      {
        title: 'San Lucas',
        description: 'Local 107 Centro Comercial San Lucas',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Correo',
        description: 'info@cosmovisiongt.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Teléfono',
        description: '+502 2375 2311',
        icon: 'tabler:phone',
      }
    ]}
  />
</Layout>
