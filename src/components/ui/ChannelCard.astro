---
import { Image } from 'astro:assets';
import type { Canal } from '~/data/canales';

// Recibe las props de un canal (número, nombre y logo importado)
const { numero, nombre, logo } = Astro.props as Canal;
---

<figure class="border-2 border-orange-500 rounded-md overflow-hidden bg-white shadow-sm hover:shadow-md transition-shadow">
  <!-- Fondo gris suave para que los logos blancos destaquen -->
  <div class="p-2 flex items-center justify-center h-40 bg-white">
    <!-- Añadimos drop-shadow para resaltar contornos claros -->
    <Image
      src={logo}
      alt={`Logo de ${nombre}`}
      width={120}
      height={120}
      loading="lazy"
      class="filter drop-shadow-lg"
    />
  </div>
  <figcaption class="bg-orange-500 text-white text-md font-bold text-center py-1">
    {numero}. {nombre}
  </figcaption>
</figure>
